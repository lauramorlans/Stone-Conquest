                    {% endfor %}
                </select>
            </div>
            <div>
                <input type="submit" value="Creer Partie" class="button-form">
            </div>

            <div class="row justify-content-between creerPartie_links">
                <div class="col-4 col-creerPartie">
                    <a href="{{ path('security_logout')}}" class="button-retour-creerPartie">Se deconnecter</a>
                    <ul class="left">
                        <li>
