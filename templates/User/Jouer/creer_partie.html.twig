{% block body %}
    <div class="creerPartie-page">
        <div class="row justify-content-between col-menu">
            <div class="col">
                <img src="{{ asset ('assets/images/logo.png') }}" class="logo">
            </div>
            <div class="col">
                <ul id="menu-demo2">
                    <li><a href="{{ path('user')}}">Mon compte <i class="fas fa-user fa-2x"></i></a>
